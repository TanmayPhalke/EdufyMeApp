<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Visual="Material"
             BackgroundColor="LightGreen"
             Title="Back To Dashboard"
             x:Class="App.changePassword">
    <ContentPage.Content>
        <StackLayout Padding="25">
            <Label Text="Change Login Password" TextColor="Black" HorizontalOptions="CenterAndExpand" FontSize="Large" Margin="0,0,0,10" />
            <Entry x:Name="CurrentPass_Entry" Placeholder="Current Password" IsPassword="True" TextColor="Black" BackgroundColor="White" HorizontalOptions="FillAndExpand"/>
            <Entry x:Name="NewPass_Entry" Placeholder="New Password" IsPassword="True" TextColor="Black" BackgroundColor="White" HorizontalOptions="FillAndExpand"/>
            <Entry x:Name="ConfPass_Entry" Placeholder="Confirm Password" IsPassword="True" TextColor="Black" BackgroundColor="White" HorizontalOptions="FillAndExpand"/>
            <Button x:Name="SubmitButton" Text="Submit" TextColor="White" HeightRequest="50" BackgroundColor="DodgerBlue" Clicked="SubmitButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>